<div class="jumbotron">
  <h1 class="display-1">MongooseSC</h1>
  <p class="lead text-white"><i>Technology Articles Scraped for You're Pleasure...</i></p>
  <a href="/articles" class="btn btn-success"><i class="fas fa-backward"></i> Back to Articles</a>
</div>

<div class="row justify-content-center">
  <div class="col-lg-6 col-sm-12">
    <div class="card" id="article-card">
      <div class="card-body">
        <h5 class="card-title">{{ article.title }}</h5>
        <h6 class="card-subtitle mb-2 text-muted">{{ article.author }}</h6>
        <p class="card-text">{{ article.excerpt }}</p>
        <a href="{{ article.link }}" class="card-link" target="_blank">View Article</a>
        <!--<a href="#" class="card-link">New Note</a>-->
      </div>
    </div>
  </div>
  <div class="col-lg-6 col-sm-12">
    <div class="card" id="new-card">
      <div class="card-body">
        <h5 class="card-title text-center">New Note</h5>
        <form>
          <fieldset>
            <div class="form-group">
              <label for="note-title">Note Title</label>
              <input type="text" class="form-control" id="note-title" placeholder="Enter Title">
            </div>
            <div class="form-group">
              <label for="note-body">Note Text</label>
              <textarea class="form-control" id="note-body" rows="3"></textarea>
            </div>
            <button type="submit" id="submit-note" class="btn btn-primary" data-id="{{ article._id }}">Submit</button>
          </fieldset>
        </form>
      </div>
    </div>
  </div>
</div>

<div class="row justify-content-center mt-4">
  <div class="card-columns">
    {{#each article.notes}}
      <div class="card">
        <h5 class="card-header">{{ this.title }}
          <button type="button" class="btn btn-light btn-sm edit-note" data-id="{{ this._id }}"
                  data-article="{{ this.articleId }}">
            <i class="far fa-edit"></i>
          </button>
          <button type="button" class="close delete-note" data-id="{{ this._id }}"
                  data-article="{{ this.articleId }}">
            <span>&times;</span>
          </button>
        </h5>
        <div class="card-body">
          <p class="card-text">{{ this.body }}</p>
          <p class="card-text">
            <small class="text-muted">{{ this.updated }}</small>
          </p>
        </div>
      </div>
    {{/each}}
  </div>
</div>

<div class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Update Note</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form>
          <fieldset>
            <div class="form-group">
              <label for="update-title">New Title</label>
              <input type="text" class="form-control" id="update-title" placeholder="New Title">
            </div>
            <div class="form-group">
              <label for="update-body">New Text</label>
              <textarea class="form-control" id="update-body" rows="3"></textarea>
            </div>
          </fieldset>
        </form>
      </div>
      <div class="modal-footer">
        <button type="submit" id="update-note" class="btn btn-primary" data-id="{{ article._id }}">Submit</button>
        <!--<button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>-->
      </div>
    </div>
  </div>
</div>